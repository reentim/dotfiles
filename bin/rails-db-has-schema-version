#!/usr/bin/env bash

main() {
  [[ $1 = "-d" ]] && db="${2}"
  shift
  shift
  [[ $1 = "-v" ]] && version="${2}"

  [[ -z $db ]] | [[ -z $version ]] && >&2 echo "argument error" && exit 1

  result=$(psql -d $db -c "copy (select version from schema_migrations where version = '${version}') to stdout")

  [[ $result ]] && exit 0
  exit 1
}

main "$@"
