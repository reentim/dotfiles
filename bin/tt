#!/usr/bin/env bash

function main() {
  local target=$(tmux-recipient)
  if [ $target ]; then
    # TODO backgrounding won't help if the running process is a test run, pry,
    # etc.
    # consider splitting and zooming
    tmux send-keys -t $target C-c "clear; time $*; jobs | tail -1" C-m
    exit 0
  fi
  exit 1
}

main $*
