#!/usr/bin/env bash

all_workspaces=$(hyprctl workspaces)

last_workspace=$(echo "$all_workspaces" | grep -E "^workspace ID [0-9]+" | awk '{print $3}' | sort | tail -n 1)

empty_workspace=$((last_workspace+1))

if [[ -n "$empty_workspace" ]]; then
  hyprctl dispatch movetoworkspace "$empty_workspace"
else
  # fallback to 9th workspace
  hyprctl dispatch workspace 9
fi
