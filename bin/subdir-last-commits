#!/usr/bin/env bash

main() {
  for dir in `find . -name .git -type d -prune`; do
    echo "$(repo_name) | $(git_log)"
  done
}

repo_name() {
  echo "$(basename $(echo $dir | sed -e 's|/.git||'))"
}

git_log() {
  git --no-pager -C $dir log --pretty=format:'%at | %ad | %an | %s' -n 1
}

main |
  awk '{print $3 " | " $0}' |
  sort -r |
  awk '{$1=$2=$4=$5=""; print $0}' |
  column -s "|" -t
