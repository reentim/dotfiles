[user]
  name = Timothy Reen
  email = reentim@gmail.com
[github]
  user = reentim
[core]
  editor = vim
  excludesfile = "~/.gitignore-global"
[color]
  ui = auto
  status = auto
  branch = auto
  interactive = auto
  diff = auto
[alias]
  aa      = add -A
  amend   = commit --amend
  bd      = "!. ~/.githelpers && branch_diff"
  ci      = commit --verbose
  cim     = commit -m
  co      = checkout
  ctags   = "!.git/hooks/ctags"
  di      = diff
  ds      = diff --staged
  ff      = merge --ff-only
  fix     = "!f() { git rebase -i $1~ --autosquash; }; f"
  fixup   = commit --fixup
  from    = "!f() { git fetch && git rebase origin/master; }; f"
  fros    = "!f() { git fetch && git rebase origin/staging; }; f"
  l       = log --graph --pretty=format:\"%C(yellow)%h%C(green) %ar%C(blue) %an%C(red)%d%C(reset) %s\"
  lpr     = log --patch --reverse
  mmnoff  = "!f() { branch=$(git rev-parse --abbrev-ref HEAD); git co master && git merge --no-ff origin/$branch; }; f"
  noff    = merge --no-ff
  pf      = pull --ff-only
  pf      = pull --ff-only
  r       = "!. ~/.githelpers && recent_branch"
  rom     = "!f() { git rebase origin/master; }; f"
  rom     = rebase origin/master
  ros     = "!f() { git rebase origin/staging; }; f"
  s       = "!f() { git branch -a | cut -c 3- | sed 's:remotes/origin/::' | sort | uniq | selecta | xargs git checkout; }; f"
  st      = status -sb
  unstage = reset HEAD
  unwip   = "!. ~/.githelpers && unwip"
  wip     = "!f() { git add -A && git commit --no-verify -m 'wip'; }; f"
[merge]
  tool = vimdiff
  defaultToUpstream = true
[push]
  default = tracking
[init]
  templatedir = ~/.git_template
[rerere]
	enabled = true
[remote "origin"]
  prune = true
