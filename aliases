alias vi='vim'
alias sr='screen -r'
alias tmux='tmux -u'
alias t='tmux'
alias ta='t a'
alias ff='find . -type f | ack -i '
alias tree='tree -FC'
alias l='ls -lh'
alias ll='ls -alF'
alias la='ls -A'
alias rspec='rspec --color --tty'
alias bx='bundle exec'
alias z='zeus '
alias r='rails'
alias duh='du -csh'
alias fixtime='sudo /etc/init.d/ntp stop && sudo /usr/sbin/ntpdate time.apple.com'

if [[ $SYSTEM_TYPE == 'Darwin' ]]; then
	alias ls='ls -CFG'
	alias ll='ls -alFG'
	alias la='ls -AG'
	alias l='ls -lh'
fi
