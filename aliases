#!/usr/bin/env bash

alias ls='ls -CF --color=always --group-directories-first'

if [[ $(uname) == "Darwin" ]]; then
  command -v gls > /dev/null 2>&1 && alias ls="gls --color=auto --group-directories-first --file-type --time-style=+'%F %T'"
  command -v gstat > /dev/null 2>&1 && alias numfmt="gnumfmt"
fi

alias ag='rg'
alias bx='bundle exec'
alias cdr='cd $(git rev-parse --show-cdup 2>/dev/null)'
alias diff='colordiff -u'
alias docker='podman'
alias grep='grep --color=auto'
alias l='ls -1'
alias la='ls -la'
alias ll='ls -l'
alias rspec='rspec --color --tty --format documentation'
alias sr='screen -r'
alias sshu='ssh -A -l ubuntu '
alias t='tmux'
alias ta='tmux attach'
alias tree='tree -FC --dirsfirst'
alias vi='nvim'

command -v hub > /dev/null 2>&1 && alias git='hub'
command -v xdg-open > /dev/null 2>&1 && alias open='xdg-open'
